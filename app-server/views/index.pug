extends layout

block content
  .w3-card-4.w3-margin 
    header.w3-container.w3-blue
      h2 Novo Ficheiro 

    form.w3-container(action="/" method="POST" enctype="multipart/form-data")
      .w3-container(id="lista")
        .w3-container(id="f1")
          //- .w3-cell-row
          //-   label.w3-cell Descrição: 
          //-   input.w3-input.w3-cell.w3-border(type="text" name="desc")
          .w3-cell-row Ficheiro:
            label.w3-cell  
            input.w3-input.w3-cell.w3-border(type="file" name="zip")
      //- .w3-cell-row
      //-   button.w3-button.w3-round-large.w3-indigo(id="+1") +1
      .w3-cell-row
        button.w3-button.w3-round-large.w3-deep-purple.w3-margin(type="submit" value="Enviar") Enviar

    .w3-card-4.modal(id="display")

    .w3-card-4
      header.w3-container.w3-blue
        h1 Lista de ficheiros armazenados

      .w3-container
        if(ficheiros.length > 0)
          table.w3-table-all
            tr
              th Data
              th Produtor
              th Submissor
              th Ficheiro
              th Path
              th Zip
              th Tipo
              th Download 
            each f in ficheiros
              tr
                td=f.data_submissao
                td=f.id_prod
                td=f.id_submissor
                td=f.titulo_recurso
                td=f.path_recurso
                td=f.zip_name
                td=f.tipo_recurso
                td
                  a(href="/download/"+f._id) Download
        else
          p Ainda não há ficheiros armazenados...